.belt-dl {
  display: block;
  padding: 0;
  margin: 0;
  text-align: left;
}
.belt-dl-title {
  display: block;
  padding: 0;
  margin: 0 0 .5rem;
  font-size: font_size_normal;
  font-weight: bold;
}
.belt-dl-data {
  display: block;
  padding: 0 0 0 1rem;
  margin: 0 0 .5rem;
  font-size: font_size_normal;
  &.is_time {
    margin: 0;
    font-size: font_size_small;
  }
}
.belt-dl-data__text {
  display: block;
  padding: 0;
  margin: 0;
  word-break: break-all;
}
