.section {
  position: relative;
  z-index: 1600;
  display: block;
  margin: 0 0 4rem;
  &.has_padding {
    padding: 0 .5rem .5rem;
  }
  &.is_eyecatch {
    padding: 4rem 0 2rem;
    .section-title {
      color: color_white;
      font-size: 2.5rem;
      white-space: nowrap;
    }
  }
}
.section-title {
  display: block;
  padding: 0 0 1rem;
  margin: 0;
  text-align: center;
  letter-spacing: .2em;
  font-size: font_size_big;
  // border-bottom: solid 2px color_green;
  &.text_white {
    color: color_white;
  }
}
.section-figure {
  display: block;
  margin: 0;
  padding: 0;
  overflow: hidden;
}
.section-figure__image {
  display: block;
  margin: 0;
  padding: 0;
  width: 100%;
}
