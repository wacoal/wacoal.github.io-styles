.btn-wrap {
  display: block;
  text-align: center;
  .btn {
    display: inline-block;
    text-align: left;
  }
}
.btn {
  position: relative;
  display: block;
  // height: 44px;
  padding: 10px 4px;
  text-decoration: none;
  font-size: font_size_small;
  text-align: center;
  background: color_white;
  color:color_black;
  // &:before {
  //   content: "";
  //   display: inline-block;
  //   vertical-align: middle;
  //   height: 100%;
  //   margin-left: -0.25em;
  // }
  &.has_border {
    // padding: .5rem 2rem;
    padding: 1.2rem 2rem;
    border: solid 1px color_black;
  }
  &.arrow_right {
    position: relative;
    @extend .arrow_right;
    &:after {
      position: relative;
      display: inline-block;
      vertical-align: middle;
      margin: 0 0 0 .5rem;
    }
  }
  &.arrow_bottom {
    position: relative;
    @extend .arrow_bottom;
    &:after {
      position: relative;
      display: inline-block;
      vertical-align: middle;
      margin: 0 0 0 .5rem;
    }
  }
}
.btn__item {
  display: inline-block;
  vertical-align: middle;
  padding: 0;
  margin: 0;
  line-height: 1.2em;
  font-size: inherit;
  text-align: left;
  color: inherit;
  font-weight: bold;
  letter-spacing: .08rem
}

.page_home {
  .btn.is_home {
    color: color_green;
    &:after {
      content: "";
      position: absolute;
      bottom: 0;
      left: 10%;
      display: block;
      width: 80%;
      height: 4px;
      background-color: color_green;
      background-image: url(img_bg);
      background-repeat: repeat
    }
  }
}
.page_hanashi {
  .btn.is_hanashi {
    @extend .page_home .btn.is_home;
  }
}

