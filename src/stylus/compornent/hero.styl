.hero {
  position: relative;
  display: block;
  width: 100%;
  height: 50vh;
  padding: 0;
  margin: 0;
  background: red;
}
.hero__image {
  display: block;
  width: 100%;
  height: 100%;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}
.hero-title {
  position: absolute;
  top: 50%;
  left: 50%;
  display: block;
  padding: 0;
  margin: 0;
  display: none;
}

